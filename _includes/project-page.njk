---
layout: base.njk
---
{# <div class="splash-small"> #}
    
</div>
<main>
    <div class="project-content">
        <div class="project-post">

            <div class="projects-nav">
                <div class="nav-container">
                    <span>Select Projects:</span>
                    <ul>
                    {%- for project in collections.projects | reverse -%}
                    <li{% if page.url == project.url %} aria-current="page"{% endif %}><a href="{{project.url}}">{{ project.data.title }}</a></li>
                    {%- endfor -%}
                    {% if page.url === '/projects/portfolio-sites/'%}
                    <ul style="font-size:0.8rem; border-top: 1px solid gray;">
                        <li><a href="#erick">Erick Lundgren</a></li>
                        <li><a href="#colin">Colin Johnson</a></li>
                        <li><a href="#parker">Personal Portfolio</a></li>
                    </ul>
                    {% endif %}
                    </ul>
                </div>
            </div>
            
            <div class="reading-width">
            
                {# <div class="projects-nav">
                    <div class="nav-container">
                        <span>Projects:</span>
                        <ul>
                        {%- for project in collections.projects | reverse -%}
                        <li{% if page.url == project.url %} aria-current="page"{% endif %}><a href="{{project.url}}">{{ project.data.title }}</a></li>
                        {%- endfor -%}
                        </ul>
                    </div>
                </div> #}

                <h1>{{title}}</h1>
                {# <picture class="top-picture">
                <img src="{{topPicture}}" alt="{{topPictureAlt}}">
                </picture> #}

                <div class="button-container">
                    {% if liveUrl %}<a href="{{liveUrl}}" target="_blank"><button>See it live</button></a>{% endif %}
                    {% if githubUrl %} <a href="{{githubUrl}}" target="_blank"><button>Source Code (github)</button></a> {% endif %}
                </div>

            </div>
            
             {{ content | safe }}

            <hr class="reading-width">
            <nav class="project-nav reading-width">
            {%- set nextPost = collections.projects | getNextCollectionItem(page) %}
            {%- if nextPost %}
                <a href="{{ nextPost.url | url }}">
                    <div class="nav-item">
                    ←{{ nextPost.data.title }}
                    </div>
                </a>
            {% else %}
                <div></div>
            {% endif %}

            {%- set previousPost = collections.projects | getPreviousCollectionItem(page) %}
            {%- if previousPost %}
                <a href="{{ previousPost.url | url }}">
                <div class="nav-item right">
                {{ previousPost.data.title }}→
                </div>
                </a>
            {% else %}
                <div></div>
            {% endif %}
            </nav>
        </div>

    </div>
</main>