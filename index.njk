          {% macro ProjectCard(params) %}
          <div class="project-card-wide {% if params.first %} first{% endif %}" id="{{ params.id }}">
            <div class="project-card-screenshot">
              <a href="{{ params.pageUrl}}">
                {% if params.animated %}
                <picture>
                  <img src="{{params.img}}" alt="{{params.imgAlt}}">
                </picture>
                {% else %}
                  {% imageMacro params.img, params.imgAlt, false %}
                {% endif %}
              </a>
            </div>
            <div class="project-card-description">
              <div>
                <a href="{{ params.pageUrl}}"><h3>{{ params.title }}</h3></a>
                <p>{{ params.description }}</p>
                <div class="project-card-tags">
                <p>
                  {% for tag in params.tags %}
                  <span>{{ tag }}</span>
                  {% endfor %}
                </p>
              </div>
              </div>
             
              
              <div class="button-container">
                  {% if params.liveUrl %}<a href="{{params.liveUrl}}" target="_blank"><button>See it live</button></a> {% endif %}
                  {% if params.githubUrl %}<a href="{{params.githubUrl}}" target="_blank"><button>Source Code</button></a>{% endif %}
                </div>
            </div>
          </div>
          {% endmacro %}

